<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ali.virtualchat">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_virtual_chat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_virtual_chat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.ali.virtualchat.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.RegisterActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.UserActivity" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.ChatActivity" android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>