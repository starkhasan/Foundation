<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
            <solid android:color="?colorSecondaryVariant" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Main Layout -->
    <item
        android:top="0.5dp"
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp">
        <shape>
            <solid android:color="?colorControlHighlight"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>