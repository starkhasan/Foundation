<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.traversal.notestodo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesTodo">

        <activity android:name=".view.SplashActivity" android:exported="true" android:theme="@style/Theme.NotesTodo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.NotesHomeActivity" android:exported="false" android:theme="@style/Theme.NotesTodo.NoActionBar"/>
        <activity android:name=".view.AuthenticationActivity" android:exported="false" android:theme="@style/Theme.NotesTodo.NoActionBar"/>

    </application>

</manifest>